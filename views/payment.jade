extends layout.jade

block extra-scripts
  //- build:js /scripts/home.js
  script(src='https://js.braintreegateway.com/v2/braintree.js')
  script(src="/js/count.js")
  script(charset='utf-8').
    braintree.setup("", 'dropin', {
      container: 'checkout'
    });
  //- endbuild

block page-content

  body.payment-page
    .hero-list
      .navbar-bee
        .row
          .col-md-4
            a(href="/")
              img(src="../../img/logo-white.svg")
          .col-md-8
            ul.text-right
              if user
                li
                  img.avatar(src="https://avatars1.githubusercontent.com/u/2775157?v=3&s=96")
                li
                  a(href='/logout') Logout &nbsp;
                    span.glyphicon.glyphicon-log-out
              else
                li
                  a(href='#') Login
                li
                  a(href='#') Sign up

    section.filter
      .single-job
        ol.breadcrumb
          li
            a(href='/') Home
          li
            a(href='#') Projects
          li.active Node.js

        header #{project.title}
        .description-container
          .row
            .col-md-6
              #tile1.tile
                .wrapper
                  .header Make the payment
                  .price.text-center
                    label PRICE
                    p #{job.cost}$


                  .list-group
                    .list-group-item
                      img(src="https://avatars2.githubusercontent.com/u/1353975?v=3&s=96")
                      p Stefano Tirloni
                        br
                        b stedesign
            .col-md-6
                //.container
                form.payment-container(action='/owners/jobs/'+job.id+'/pay', method='post')
                  h2 Payment form
                  #checkout
                  input.btn.btn-primary.btn-lg.pull-right(type='submit', value='Submit Payment')




    footer
      .text-center
        img(src="../../img/logo-white.svg")

