extends layout.jade

block extra-scripts
  //- build:js /scripts/home.js
  script(src="/js/count.js")
  //- endbuild

block page-content

  body.list-page
    .hero-list
      .navbar-bee
        .row
          .col-md-4
            a(href="/")
              img(src="./img/logo.svg")
          .col-md-8
            ul.text-right
              if user
                li
                  a(href='/logout') Logout
                li
                  img(src="https://avatars1.githubusercontent.com/u/2775157?v=3&s=96")
              else
                li
                  a(href='#') Login
                li
                  a(href='#') Sign up

    section.filter
      .single-job
        ol.breadcrumb
          li
            a(href='/') Home
          li
            a(href='#') Projects
          li.active Node.js

        header #{project.title}
        for job in project.jobs
          .description-container
            .row
              .col-md-6
                h1 #{job.title}
                p #{job.description}

              .col-md-5.col-md-offset-1
                #tile1.tile
                  .wrapper
                    .header Details
                    .price.text-center
                      label PRICE
                      p #{job.cost}$
                    .dates
                      .start
                        strong STARTS
                        | OCT 2015
                        span
                      .ends
                        strong ENDS
                        | DEC 2015
                    .stats
                      div
                        strong VIEWS
                        | 309
                      div
                        strong JOINED
                        | 5
                      div
                        strong DECLINED
                        | 2

            .row
              .col-md-12
                .stats-container.text-center
                  h2 Code activity
                  br
                  .stats-chart-wrapper
                    .stats-labels(data-labels='35 30 25 20 15 10')
                    .stats-graph



            .row.coder-list
              .col-md-12
                h3 Check the single pull requests:
                .list-group
                  a.list-group-item(href='/job/'+job.id+'/payment')
                    img(src="https://avatars2.githubusercontent.com/u/1353975?v=3&s=96")
                    span Stefano Tirloni &nbsp;&nbsp;
                      b stedesign
                    button.btn.btn-success.btn-xs.pull-right(type="button") Choose this pull request
                  a.list-group-item(href='/job/'+job.id+'/payment')
                    img(src="https://avatars1.githubusercontent.com/u/2775157?v=3&s=96")
                    span Kan Zhang &nbsp;&nbsp;
                      b Kan Zhang
                    button.btn.btn-success.btn-xs.pull-right(type="button") Choose this pull request
                  a.list-group-item(href='/job/'+job.id+'/payment')
                    img(src="https://avatars1.githubusercontent.com/u/7259057?v=3&s=96")
                    span Brian Leung &nbsp;&nbsp;
                      b brianleung11-3
                    button.btn.btn-success.btn-xs.pull-right(type="button") Choose this pull request
                  a.list-group-item(href='/job/'+job.id+'/payment')
                    img(src="https://avatars2.githubusercontent.com/u/3770894?v=3&s=96")
                    span Eric Lin &nbsp;&nbsp;
                      b Ericlin2014
                    button.btn.btn-success.btn-xs.pull-right(type="button") Choose this pull request
                  a.list-group-item(href='/job/'+job.id+'/payment')
                    img(src="https://avatars3.githubusercontent.com/u/1731569?v=3&s=96")
                    span Flynn &nbsp;&nbsp;
                      b fhowling
                    button.btn.btn-success.btn-xs.pull-right(type="button") Choose this pull request
                  a.list-group-item(href='/job/'+job.id+'/payment')
                    img(src="https://avatars2.githubusercontent.com/u/6543665?v=3&s=96")
                    span David Huynh &nbsp;&nbsp;
                      b DavidHuynh
                    button.btn.btn-success.btn-xs.pull-right(type="button") Choose this pull request


    footer
      .text-center
        img(src="img/logo-white.svg")

